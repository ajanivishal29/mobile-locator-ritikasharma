<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MobileNumberLocatorTrueCallerid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="cardBackgroundColor">#fff</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Custom">
        <item name="android:windowFullscreen">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MainMenuText">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
    </style>

    <style name="DescriptionText">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/textGrey</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="MenuText">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
    </style>

    <style name="layout_item_map_type_children">
        <item name="android:gravity">clip_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/_4sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_100sdp</item>
        <item name="android:layout_margin">@dimen/_2sdp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="image_map_place">
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:background">@drawable/menu_round_primary</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:layout_width">@dimen/_40sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="text_item">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_4sdp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>
</resources>